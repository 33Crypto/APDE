<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/picker_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.calsignlabs.apde.learning.SkillTutorialFragment">
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">
		
		<ScrollView
			android:id="@+id/skill_tutorial_container_scroller"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			android:paddingBottom="@dimen/activity_vertical_margin"
			android:paddingLeft="@dimen/activity_horizontal_margin"
			android:paddingRight="@dimen/activity_horizontal_margin"
			android:paddingTop="@dimen/activity_vertical_margin">
			
			<LinearLayout
				android:id="@+id/skill_tutorial_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical" />
		</ScrollView>
		
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal">
			
			<Button
				android:id="@+id/skill_tutorial_back"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="20dp"
				android:text="@string/skill_tutorial_back"
				android:drawableLeft="@drawable/ic_caret_left_white"
				android:drawablePadding="10dp"
				android:gravity="left|center_vertical"
				style="@style/Widget.AppCompat.Button.Borderless" />
			
			<Button
				android:id="@+id/skill_tutorial_next"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:padding="20dp"
				android:text="@string/skill_tutorial_next"
				android:drawableRight="@drawable/ic_caret_right_white"
				android:drawablePadding="10dp"
				android:gravity="right|center_vertical"
				style="@style/Widget.AppCompat.Button.Borderless" />
			
			<Button
				android:id="@+id/skill_tutorial_finish"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:paddingLeft="20dp"
				android:paddingRight="54dp"
				android:paddingTop="20dp"
				android:paddingBottom="20dp"
				android:text="@string/skill_tutorial_finish"
				android:gravity="right|center_vertical"
				android:visibility="gone"
				style="@style/Widget.AppCompat.Button.Borderless" />
		</LinearLayout>
	</LinearLayout>
	
	<View
		android:id="@+id/picker_mask"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@android:color/transparent"
		android:visibility="gone" />
</FrameLayout>
